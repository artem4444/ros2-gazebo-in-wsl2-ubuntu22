<?xml version="1.0"?>
<robot name="arm_5dof">

  <!-- ==================== WORLD LINK (for fixing to ground) ==================== -->
  <link name="world"/>
  
  <joint name="world_joint" type="fixed">
    <parent link="world"/>
    <child link="base_link"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>

  <!-- ==================== MATERIALS ==================== -->
  <material name="dark_grey">
    <color rgba="0.2 0.2 0.2 1.0"/>
  </material>
  <material name="light_grey">
    <color rgba="0.6 0.6 0.6 1.0"/>
  </material>
  <material name="blue">
    <color rgba="0.0 0.4 0.8 1.0"/>
  </material>
  <material name="orange">
    <color rgba="0.9 0.4 0.1 1.0"/>
  </material>

  <!-- ==================== BASE ==================== -->
  <link name="base_link">
    <inertial>
      <mass value="2.0"/>
      <origin xyz="0 0 0.025" rpy="0 0 0"/>
      <inertia ixx="0.003" ixy="0" ixz="0" iyy="0.003" iyz="0" izz="0.005"/>
    </inertial>
    <visual>
      <geometry>
        <cylinder radius="0.08" length="0.05"/>
      </geometry>
      <origin xyz="0 0 0.025" rpy="0 0 0"/>
      <material name="dark_grey"/>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.08" length="0.05"/>
      </geometry>
      <origin xyz="0 0 0.025" rpy="0 0 0"/>
    </collision>
  </link>

  <!-- ==================== SHOULDER ==================== -->
  <!-- Joint 1: Shoulder Pan (rotation around Z) -->
  <joint name="shoulder_pan_joint" type="revolute">
    <parent link="base_link"/>
    <child link="shoulder_link"/>
    <origin xyz="0 0 0.05" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-3.14159" upper="3.14159" effort="100" velocity="1.0"/>
    <dynamics damping="0.5" friction="0.1"/>
  </joint>

  <link name="shoulder_link">
    <inertial>
      <mass value="1.5"/>
      <origin xyz="0 0 0.04" rpy="0 0 0"/>
      <inertia ixx="0.002" ixy="0" ixz="0" iyy="0.002" iyz="0" izz="0.003"/>
    </inertial>
    <visual>
      <geometry>
        <cylinder radius="0.06" length="0.08"/>
      </geometry>
      <origin xyz="0 0 0.04" rpy="0 0 0"/>
      <material name="blue"/>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.06" length="0.08"/>
      </geometry>
      <origin xyz="0 0 0.04" rpy="0 0 0"/>
    </collision>
  </link>

  <!-- ==================== UPPER ARM ==================== -->
  <!-- Joint 2: Shoulder Lift (rotation around Y) -->
  <joint name="shoulder_lift_joint" type="revolute">
    <parent link="shoulder_link"/>
    <child link="upper_arm_link"/>
    <origin xyz="0 0 0.08" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-3.14159" upper="3.14159" effort="100" velocity="1.0"/>
    <dynamics damping="0.5" friction="0.1"/>
  </joint>

  <link name="upper_arm_link">
    <inertial>
      <mass value="1.2"/>
      <origin xyz="0 0 0.1" rpy="0 0 0"/>
      <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.001"/>
    </inertial>
    <visual>
      <!-- Joint housing -->
      <geometry>
        <sphere radius="0.05"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <material name="light_grey"/>
    </visual>
    <visual>
      <!-- Arm segment -->
      <geometry>
        <cylinder radius="0.04" length="0.3"/>
      </geometry>
      <origin xyz="0 0 0.15" rpy="0 0 0"/>
      <material name="blue"/>
    </visual>
    <collision>
      <geometry>
        <sphere radius="0.05"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </collision>
    <collision>
      <geometry>
        <cylinder radius="0.04" length="0.3"/>
      </geometry>
      <origin xyz="0 0 0.15" rpy="0 0 0"/>
    </collision>
  </link>

  <!-- ==================== FOREARM ==================== -->
  <!-- Joint 3: Elbow (rotation around Y) -->
  <joint name="elbow_joint" type="revolute">
    <parent link="upper_arm_link"/>
    <child link="forearm_link"/>
    <origin xyz="0 0 0.3" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-3.14159" upper="3.14159" effort="100" velocity="1.0"/>
    <dynamics damping="0.5" friction="0.1"/>
  </joint>

  <link name="forearm_link">
    <inertial>
      <mass value="0.8"/>
      <origin xyz="0 0 0.08" rpy="0 0 0"/>
      <inertia ixx="0.005" ixy="0" ixz="0" iyy="0.005" iyz="0" izz="0.0008"/>
    </inertial>
    <visual>
      <!-- Joint housing -->
      <geometry>
        <sphere radius="0.045"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <material name="light_grey"/>
    </visual>
    <visual>
      <!-- Arm segment -->
      <geometry>
        <cylinder radius="0.035" length="0.25"/>
      </geometry>
      <origin xyz="0 0 0.125" rpy="0 0 0"/>
      <material name="blue"/>
    </visual>
    <collision>
      <geometry>
        <sphere radius="0.045"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </collision>
    <collision>
      <geometry>
        <cylinder radius="0.035" length="0.25"/>
      </geometry>
      <origin xyz="0 0 0.125" rpy="0 0 0"/>
    </collision>
  </link>

  <!-- ==================== WRIST 1 ==================== -->
  <!-- Joint 4: Wrist Pitch (rotation around Y) -->
  <joint name="wrist_1_joint" type="revolute">
    <parent link="forearm_link"/>
    <child link="wrist_1_link"/>
    <origin xyz="0 0 0.25" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-3.14159" upper="3.14159" effort="50" velocity="1.5"/>
    <dynamics damping="0.3" friction="0.05"/>
  </joint>

  <link name="wrist_1_link">
    <inertial>
      <mass value="0.4"/>
      <origin xyz="0 0 0.03" rpy="0 0 0"/>
      <inertia ixx="0.0003" ixy="0" ixz="0" iyy="0.0003" iyz="0" izz="0.0002"/>
    </inertial>
    <visual>
      <geometry>
        <cylinder radius="0.035" length="0.06"/>
      </geometry>
      <origin xyz="0 0 0.03" rpy="0 0 0"/>
      <material name="light_grey"/>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.035" length="0.06"/>
      </geometry>
      <origin xyz="0 0 0.03" rpy="0 0 0"/>
    </collision>
  </link>

  <!-- ==================== WRIST 2 ==================== -->
  <!-- Joint 5: Wrist Roll (rotation around Z) -->
  <joint name="wrist_2_joint" type="revolute">
    <parent link="wrist_1_link"/>
    <child link="wrist_2_link"/>
    <origin xyz="0 0 0.06" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-3.14159" upper="3.14159" effort="50" velocity="1.5"/>
    <dynamics damping="0.3" friction="0.05"/>
  </joint>

  <link name="wrist_2_link">
    <inertial>
      <mass value="0.3"/>
      <origin xyz="0 0 0.02" rpy="0 0 0"/>
      <inertia ixx="0.0002" ixy="0" ixz="0" iyy="0.0002" iyz="0" izz="0.0001"/>
    </inertial>
    <visual>
      <geometry>
        <cylinder radius="0.03" length="0.04"/>
      </geometry>
      <origin xyz="0 0 0.02" rpy="0 0 0"/>
      <material name="orange"/>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.03" length="0.04"/>
      </geometry>
      <origin xyz="0 0 0.02" rpy="0 0 0"/>
    </collision>
  </link>

  <!-- ==================== GRIPPER ==================== -->
  
  <!-- Gripper Base (palm) -->
  <joint name="gripper_base_joint" type="fixed">
    <parent link="wrist_2_link"/>
    <child link="gripper_base_link"/>
    <origin xyz="0 0 0.04" rpy="0 0 0"/>
  </joint>

  <link name="gripper_base_link">
    <inertial>
      <mass value="0.2"/>
      <origin xyz="0 0 0.01" rpy="0 0 0"/>
      <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/>
    </inertial>
    <visual>
      <geometry>
        <box size="0.06 0.08 0.02"/>
      </geometry>
      <origin xyz="0 0 0.01" rpy="0 0 0"/>
      <material name="dark_grey"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.06 0.08 0.02"/>
      </geometry>
      <origin xyz="0 0 0.01" rpy="0 0 0"/>
    </collision>
  </link>

  <!-- Left Finger -->
  <joint name="gripper_left_joint" type="prismatic">
    <parent link="gripper_base_link"/>
    <child link="gripper_left_finger"/>
    <origin xyz="0 0.02 0.02" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="0" upper="0.03" effort="20" velocity="0.5"/>
    <dynamics damping="0.1" friction="0.05"/>
  </joint>

  <link name="gripper_left_finger">
    <inertial>
      <mass value="0.05"/>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
      <inertia ixx="0.00002" ixy="0" ixz="0" iyy="0.00002" iyz="0" izz="0.00001"/>
    </inertial>
    <visual>
      <!-- Finger base -->
      <geometry>
        <box size="0.02 0.01 0.06"/>
      </geometry>
      <origin xyz="0 0.005 0.03" rpy="0 0 0"/>
      <material name="light_grey"/>
    </visual>
    <visual>
      <!-- Finger tip (angled inward) -->
      <geometry>
        <box size="0.02 0.015 0.03"/>
      </geometry>
      <origin xyz="0 -0.002 0.075" rpy="0 0 0"/>
      <material name="orange"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.02 0.01 0.06"/>
      </geometry>
      <origin xyz="0 0.005 0.03" rpy="0 0 0"/>
    </collision>
    <collision>
      <geometry>
        <box size="0.02 0.015 0.03"/>
      </geometry>
      <origin xyz="0 -0.002 0.075" rpy="0 0 0"/>
    </collision>
  </link>

  <!-- Right Finger (mirrors left) -->
  <joint name="gripper_right_joint" type="prismatic">
    <parent link="gripper_base_link"/>
    <child link="gripper_right_finger"/>
    <origin xyz="0 -0.02 0.02" rpy="0 0 0"/>
    <axis xyz="0 -1 0"/>
    <limit lower="0" upper="0.03" effort="20" velocity="0.5"/>
    <mimic joint="gripper_left_joint" multiplier="1" offset="0"/>
    <dynamics damping="0.1" friction="0.05"/>
  </joint>

  <link name="gripper_right_finger">
    <inertial>
      <mass value="0.05"/>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
      <inertia ixx="0.00002" ixy="0" ixz="0" iyy="0.00002" iyz="0" izz="0.00001"/>
    </inertial>
    <visual>
      <!-- Finger base -->
      <geometry>
        <box size="0.02 0.01 0.06"/>
      </geometry>
      <origin xyz="0 -0.005 0.03" rpy="0 0 0"/>
      <material name="light_grey"/>
    </visual>
    <visual>
      <!-- Finger tip (angled inward) -->
      <geometry>
        <box size="0.02 0.015 0.03"/>
      </geometry>
      <origin xyz="0 0.002 0.075" rpy="0 0 0"/>
      <material name="orange"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.02 0.01 0.06"/>
      </geometry>
      <origin xyz="0 -0.005 0.03" rpy="0 0 0"/>
    </collision>
    <collision>
      <geometry>
        <box size="0.02 0.015 0.03"/>
      </geometry>
      <origin xyz="0 0.002 0.075" rpy="0 0 0"/>
    </collision>
  </link>

  <!-- Tool Center Point (TCP) - for path planning -->
  <joint name="tcp_joint" type="fixed">
    <parent link="gripper_base_link"/>
    <child link="tcp"/>
    <origin xyz="0 0 0.11" rpy="0 0 0"/>
  </joint>

  <link name="tcp">
    <inertial>
      <mass value="0.001"/>
      <inertia ixx="0.000001" ixy="0" ixz="0" iyy="0.000001" iyz="0" izz="0.000001"/>
    </inertial>
  </link>

  <!-- ==================== ROS2 CONTROL ==================== -->
  <ros2_control name="GazeboSimSystem" type="system">
    <hardware>
      <plugin>gz_ros2_control/GazeboSimSystem</plugin>
    </hardware>
    
    <!-- Arm joints - position controlled -->
    <joint name="shoulder_pan_joint">
      <command_interface name="position">
        <param name="min">-3.14159</param>
        <param name="max">3.14159</param>
      </command_interface>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
    </joint>
    
    <joint name="shoulder_lift_joint">
      <command_interface name="position">
        <param name="min">-3.14159</param>
        <param name="max">3.14159</param>
      </command_interface>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
    </joint>
    
    <joint name="elbow_joint">
      <command_interface name="position">
        <param name="min">-3.14159</param>
        <param name="max">3.14159</param>
      </command_interface>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
    </joint>
    
    <joint name="wrist_1_joint">
      <command_interface name="position">
        <param name="min">-3.14159</param>
        <param name="max">3.14159</param>
      </command_interface>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
    </joint>
    
    <joint name="wrist_2_joint">
      <command_interface name="position">
        <param name="min">-3.14159</param>
        <param name="max">3.14159</param>
      </command_interface>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
    </joint>
    
    <!-- Gripper joint - position controlled -->
    <joint name="gripper_left_joint">
      <command_interface name="position">
        <param name="min">0</param>
        <param name="max">0.03</param>
      </command_interface>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
    </joint>
    
    <!-- Mimic joint for right finger -->
    <joint name="gripper_right_joint">
      <param name="mimic">gripper_left_joint</param>
      <param name="multiplier">1.0</param>
      <command_interface name="position">
        <param name="min">0</param>
        <param name="max">0.03</param>
      </command_interface>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
    </joint>
  </ros2_control>

  <!-- ==================== GAZEBO PLUGINS ==================== -->
  <!-- gz_ros2_control plugin for Gazebo Harmonic -->
  <!-- Note: CONTROLLER_CONFIG_PATH is replaced at launch time -->
  <gazebo>
    <plugin filename="gz_ros2_control-system" name="gz_ros2_control::GazeboSimROS2ControlPlugin">
      <robot_param>robot_description</robot_param>
      <robot_param_node>robot_state_publisher</robot_param_node>
      <parameters>CONTROLLER_CONFIG_PATH</parameters>
    </plugin>
  </gazebo>

  <!-- Joint dynamics for Gazebo -->
  <gazebo reference="shoulder_pan_joint">
    <implicitSpringDamper>true</implicitSpringDamper>
  </gazebo>
  <gazebo reference="shoulder_lift_joint">
    <implicitSpringDamper>true</implicitSpringDamper>
  </gazebo>
  <gazebo reference="elbow_joint">
    <implicitSpringDamper>true</implicitSpringDamper>
  </gazebo>
  <gazebo reference="wrist_1_joint">
    <implicitSpringDamper>true</implicitSpringDamper>
  </gazebo>
  <gazebo reference="wrist_2_joint">
    <implicitSpringDamper>true</implicitSpringDamper>
  </gazebo>
  <gazebo reference="gripper_left_joint">
    <implicitSpringDamper>true</implicitSpringDamper>
  </gazebo>
  <gazebo reference="gripper_right_joint">
    <implicitSpringDamper>true</implicitSpringDamper>
  </gazebo>

</robot>
